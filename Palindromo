package ExecExempJava;

public class VerificaPalindromo {
	public static void main(String[] args) {
		
		String palavra = "ZAZ";
		boolean palindromo = true;
		int contaLetras = palavra.length() - 1;
		
		for (int i = 0; i < palavra.length(); i++) {
			if (palavra.charAt(i) != palavra.charAt(contaLetras - i)) {
				palindromo = false;
			}
		}
		
		if(palindromo == true){
			System.out.println("Palindromo!");
		}else{
			System.out.println("Nao palindromo!");
		}		
	}
}
